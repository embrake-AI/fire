{
	"name": "fire-monorepo",
	"private": true,
	"packageManager": "bun@1.3.5",
	"workspaces": {
		"packages": [
			"packages/*",
			"services/*"
		],
		"catalog": {
			"drizzle-orm": "^1.0.0-beta.5",
			"drizzle-kit": "^1.0.0-beta.5",
			"pg": "^8.16.3",
			"typescript": "^5.9.3",
			"@types/pg": "^8.16.0"
		}
	},
	"scripts": {
		"dev:dashboard": "turbo run dev --filter dashboard",
		"dev:incidentd": "turbo run dev --filter incidentd",
		"dev:status-page": "turbo run dev --filter status-page",
		"dev": "turbo run dev",
		"build": "turbo run build",
		"build:dashboard": "turbo run build --filter dashboard...",
		"build:incidentd": "turbo run build --filter incidentd...",
		"build:status-page": "turbo run build --filter status-page...",
		"check": "turbo run type-check && biome check",
		"type-check": "turbo run type-check",
		"lint": "biome check",
		"lint:fix": "biome check --fix",
		"clean": "turbo run clean && rm -rf node_modules",
		"db:generate": "bun --filter @fire/db db:generate",
		"db:migrate": "bun --filter @fire/db db:migrate"
	},
	"devDependencies": {
		"turbo": "^2.7.2",
		"@biomejs/biome": "2.3.10"
	}
}
