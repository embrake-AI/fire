{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"**/*.css",
			"**/*.html",
			"!!**/*.d.ts",
			"!!**/worker-configuration.d.ts",
			"!!**/dist",
			"!!**/.turbo",
			"!!**/.wrangler",
			"!!**/.output",
			"!!**/.next",
			"!!**/node_modules",
			"!!**/*.gen.ts",
			"!!**/*.zed",
			"!!**/*.claude"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 180
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"useImportExtensions": "off"
			},
			"complexity": {
				"noUselessConstructor": "off"
			}
		},
		"domains": {
			"project": "all"
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
