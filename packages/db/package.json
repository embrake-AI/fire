{
	"name": "@fire/db",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"./schema": {
			"types": "./dist/schema/index.d.ts",
			"import": "./dist/schema/index.js",
			"default": "./dist/schema/index.js"
		},
		"./relations": {
			"types": "./dist/relations.d.ts",
			"import": "./dist/relations.js",
			"default": "./dist/relations.js"
		},
		"./rotation-helpers": {
			"types": "./dist/rotation-helpers.d.ts",
			"import": "./dist/rotation-helpers.js",
			"default": "./dist/rotation-helpers.js"
		}
	},
	"files": [
		"dist",
		"migrations",
		"drizzle.config.ts",
		"README.md"
	],
	"scripts": {
		"build": "bunx tsc",
		"type-check": "bunx tsc --noEmit",
		"db:generate": "bunx drizzle-kit generate",
		"db:migrate": "bunx drizzle-kit migrate",
		"db:studio": "bunx drizzle-kit studio",
		"lint": "biome check",
		"clean": "rm -rf dist node_modules"
	},
	"dependencies": {
		"@types/bun": "^1.3.5",
		"drizzle-orm": "catalog:"
	},
	"devDependencies": {
		"@fire/common": "workspace:*",
		"drizzle-kit": "catalog:",
		"typescript": "catalog:"
	},
	"version": "0.0.71"
}
